<?xml version="1.0" encoding="UTF-8"?>

<project name="HiSlope - Examples" default="static_mirror" basedir=".">

        <target name="hello_world" depends="compile_hello_world, run_hello_world"/>
        <target name="ts_machine_vision" depends="compile_ts_machine_vision, run_ts_machine_vision"/>
        <target name="perlin_outline" depends="compile_perlin_outline, run_perlin_outline"/>
        <target name="static_mirror" depends="compile_static_mirror, run_static_mirror"/>



        <target name="compile_hello_world">
        	<fdt.launch.application 	projectname="HiSlope Release"
        								mainclass="HelloWorld.as"
        								target="${basedir}/../bin/hello_world.swf"
        								debug="true"
        								compilerarguments="-define=CONFIG::DEBUG,true"
        	/>
        </target>

		<target name="run_hello_world">
			<fdt.browse location="${basedir}/../bin/hello_world.swf" />
	  	</target>
	
	
	
	    <target name="compile_perlin_outline">
        	<fdt.launch.application 	projectname="HiSlope Release"
        								mainclass="PerlinOutline.as"
        								target="${basedir}/../bin/perlin_outline.swf"
        								debug="true"
        								compilerarguments="-define=CONFIG::DEBUG,true"
        	/>
        </target>

		<target name="run_perlin_outline">
			<fdt.browse location="${basedir}/../bin/perlin_outline.swf" />
	  	</target>



        <target name="compile_ts_machine_vision">
        	<fdt.launch.application 	projectname="HiSlope Release"
        								mainclass="TSMachineVision.as"
        								target="${basedir}/../bin/ts_machine_vision.swf"
        								debug="true"
        								compilerarguments="-define=CONFIG::DEBUG,true"
        	/>
        </target>

		<target name="run_ts_machine_vision">
			<fdt.browse location="${basedir}/../bin/ts_machine_vision.swf" />
	  	</target>
	
	
	
	    <target name="compile_static_mirror">
        	<fdt.launch.application 	projectname="HiSlope Release"
        								mainclass="StaticMirror.as"
        								target="${basedir}/../bin/static_mirror.swf"
        								debug="true"
        								compilerarguments="-define=CONFIG::DEBUG,true"
        	/>
        </target>

		<target name="run_static_mirror">
			<fdt.browse location="${basedir}/../bin/static_mirror.swf" />
	  	</target>
	

</project>